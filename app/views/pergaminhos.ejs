<div id="pergaminhos">					
	<h3>Pergaminhos</h3>
	

	<ul>
            <% 
            if (acoes.length > 0) { 
                 acoes.forEach(function(acao){ 

                       let txt_acao = "";
                       switch(parseInt(acao.acao)) { 
                          case 1: 
                            txt_acao = "aldeão(ões) coletando recursos"; 
                            break;
                          case 2: 
                            txt_acao = "enforcamento(s) programado"; 
                            break;
                          case 3: 
                            txt_acao = "aldeão(ões) em treinamento de história"; 
                            break;
                          case 4: 
                            txt_acao = "aldeão(ões) em treinamento de magia"; 
                            break;

                      } 

                      let data = new Date();
                      let momento_atual = data.getTime();
                      let segundos_restantes = Math.round((acao.acao_termina_em - momento_atual) / 1000)

             %>
                    <li><%= acao.quantidade %> <%= txt_acao %> 
                      <small> - restam <span class="segundos_restantes"><%= segundos_restantes %></span> segundos
                      <a href="#">revogar ordem</a></small>
                    </li>
             <%    }) 
              } %>
             
	</ul>
</div>